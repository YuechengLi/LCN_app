<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background_200"
    tools:context="edu.pitt.ycli.test_hello.home">

    <Button
        android:id="@+id/button_ebutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:onClick="Start_ebutton"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="lpeButton Image Viewer" />

    <Button
        android:id="@+id/button_data_logger_top"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="Start_Data_Logger_top"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="Data Logger(s)"/>



    <Button
        android:id="@+id/button_alg_imagetools"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="alg_imagetools"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="Image Tools" />

    <Button
        android:id="@+id/button_alg_foodRec"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="alg_foodRec"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="Food Recognition" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="Exit_app"
        android:drawableLeft="@drawable/exit"
        android:paddingLeft="15dip"
        android:background="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:text="Exit" />



</LinearLayout>
